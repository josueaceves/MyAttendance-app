<p id="notice"><%= notice %></p>

<h1>Listing Choir Members</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Voice</th>
      <th>Side</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @choir_members.each do |choir_member| %>
      <tr>
        <td><%= choir_member.first_name %></td>
        <td><%= choir_member.last_name %></td>
        <td><%= choir_member.voice %></td>
        <td><%= choir_member.side %></td>
        <td><%= link_to 'Show', choir_member %></td>
        <td><%= link_to 'Edit', edit_choir_member_path(choir_member) %></td>
        <td><%= link_to 'Destroy', choir_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

